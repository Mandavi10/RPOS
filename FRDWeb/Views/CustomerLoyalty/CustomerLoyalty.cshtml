</style>
<div class="container RestaurantInfra">
    <div class="pageHead">
        <h4 class="pageTitle">Customer Loyalty</h4>

    </div>
    <div class="card mt-2" id="">
        <div class="card-body mainCon">
            <div class="pageHead">
                <h4 class="pageTitle">Issue</h4>

            </div>
            <div class="row">
                <div class="col-md-6 pl-0">
                    <label class="col-md-4 fontBold">Name:</label>
                    <input type="text" id="txtclname" class="form-control col-md-8 pull-right" placeholder="Name" onkeyup="RemoveClass();" onblur=" Checkname();" />


                </div>
                <div class="col-md-6">
                    <label class="col-md-4 fontBold">Mobile:</label>
                    <input type="text" id="txtclmobile" class="form-control col-md-8 pull-right" maxlength="10" placeholder="Mobile" onblur="mobilecheck();" onkeyup="RemoveClass();" />

                </div>
                <div class="col-md-6 pl-0 pt-1" style="position:relative;">
                    <label class="col-md-4 fontBold">Card No.:</label>
                    <input type="text" id="txtclcardno" class="form-control col-md-8 pull-right autocomplete ui-widget"  placeholder="Card Number" onkeypress=" RemoveClass();" onkeyup="FilterCardNo();" maxlength="30" />
                    @*<input type="text" id="myInput" class="form-control col-md-8 pull-right autocomplete" placeholder="Card Number"  />*@
                </div>
                <div class="col-md-6 pt-1">
                    <label class="col-md-4 fontBold">Email:</label>
                    <input type="text" id="txtclemail" class="form-control col-md-8 pull-right" placeholder="Email" onkeyup="RemoveClass();" />

                </div>

                <div class="col-md-6 pt-1 pl-0">
                    <label class="col-md-4 fontBold">Address:</label>
                    <textarea type="text" id="txtcladdress" class="form-control col-md-8 pull-right" placeholder="Address" onkeyup="RemoveClass();"></textarea>
                </div>

                <div class="col-md-6 pt-1">
                    <button type="button" id="btnclissue" class="btn btn-success btn-sm pull-right"><i class="fa fa-credit-card-alt" aria-hidden="true"></i>Issue</button>
                </div>
            </div>

        </div>
    </div>


        <div class="card mt-3" id="">
            <div class="card-body mainCon">

                <div class="pageHead">
                    <h4 class="pageTitle">Reissue</h4>

                </div>
                <div class="row">
                    <div class="col-md-6 pl-0">
                        <label class="col-md-4 fontBold">Card Number:</label>
                        <input type="text" id="txtissuecardno" autocomplete="off" class="form-control col-md-8 pull-right" placeholder="Card Number" onblur="CheckReissueCardno();" onkeyup=" RemoveClass();" />


                    </div>
                    <div class="col-md-6">
                        <label class="col-md-4 fontBold">Mobile Number:</label>
                        <input type="text" id="txtissuemobno" maxlength="10" class="form-control col-md-8 pull-right" placeholder="Mobile Number" onblur="CheckReissueMobileNo();" onkeyup=" RemoveClass();" />

                    </div>
                </div>
                <div class="row" id="dvreissue" style="display:none">
                    <div class="col-md-6 pl-0 pt-1">
                        <label class="col-md-4 fontBold">Card No.:</label>
                        <label class="col-md-8 fontBold pull-right pl-0" id="lblricardno"></label>
                    </div>
                    <div class="col-md-6 pt-1">
                        <label class="col-md-4 fontBold">Customer Name:</label>
                        <label class="col-md-8 fontBold pull-right pl-0" id="lblriname"></label>
                    </div>
                    <div class="col-md-6 pt-1 pl-0">
                        <label class="col-md-4 fontBold">Mobile Number:</label>
                        <label class="col-md-8 fontBold pull-right pl-0" id="lblrimobno"></label>
                    </div>
                    <div class="col-md-6 pt-1">
                        <label class="col-md-4 fontBold">Email:</label>
                        <label class="col-md-8 fontBold pull-right pl-0" id="lblriemail"></label>
                    </div>
                    <div class="col-md-6 pl-0" style="position:relative;">
                        <label class="col-md-4 fontBold">New Card Number:</label>
                        <input type="text" id="txtissuenwcardno" class="form-control col-md-8 pull-right autocomplete ui-widget" placeholder="Card Number" onkeyup="FilterIssueCardNo();" onkeypress="RemoveClass();" />


                    </div>
                    <div class="col-md-6 pt-1">
                        <button type="button" id="btnclreissue" class="btn btn-success btn-sm pull-right"><i class="fa fa-credit-card-alt" aria-hidden="true"></i>Reissue</button>
                    </div>
                </div>

                <div class="col-md-12 p-0 mt-1 btnposi">
                    <div class="buttonCon1 pull-right">


                        <button class="btn btn-success btn-sm"><a href="/Home/Index"><i class="fa fa-sign-out" aria-hidden="true"></i>Exit</a></button>

                    </div>
                </div>
            </div>
        </div>



           
