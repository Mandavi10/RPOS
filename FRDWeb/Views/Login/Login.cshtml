@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>POS System </title>
    <link rel="icon" type="image/x-icon" href="~/Content/images/favicon.ico" />

    <link href="~/Content/css/material-style.css" rel="stylesheet" />
    <link href="~/Content/css/styles.css" rel="stylesheet" />
    <link href="~/Content/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/css/login.css" rel="stylesheet" />
    <script src="~/Content/js/jquery.min.js"></script>
    <script src="~/Content/js/custom.js"></script>
    <script src="~/JavaScript/Login.js"></script>
    @*<script src="~/MinJavaScript/Login_min.js"></script>*@
    <script>

    </script>
</head>

<body>
    <div>
        <form id="form1" class="mb-0" autocomplete="off">
            <div class='wrapper'>
                <div class='main-panel'>
                    <div class="loginBG">
                        <div class="content">

                            <div class="container-fluid">

                                <div class="clearfix"></div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="card-body ">
                                            <form method="get" class="form-horizontal"> 
                                                <div class="container">
                                                    <div class="row mb-2">
                                                        <div class="card card-login mx-auto text-center bg-theme">
                                                            <div class="card-header mx-auto mb-3">
                                                                <a href="#" class="simple-text logo-normal">
                                                                    <img src="~/Content/images/POS-logo-sign2.png" />
                                                                </a>
                                                            </div>

                                                            <div class="card-body">
                                                                <div class="loginCon" id="DivLogin">

                                                                    <div class="input-group form-group">
                                                                        <div class="input-group-prepend">
                                                                            <span class="input-group-text"><i class="fa fa-user"></i></span>
                                                                            <input type="email" name="EmailId" class="form-control" placeholder="User ID" id="txtUserId">

                                                                        </div>

                                                                    </div>
                                                                   
                                                                    <div class="input-group form-group">
                                                                        <div class="input-group-prepend">
                                                                            <span class="input-group-text"><i class="fa fa-key"></i></span>
                                                                            <input type="password" name="password" class="form-control" placeholder="Password" id="txtPassWord">
                                                                        </div>
                                                                    </div>

                                                                    <div class="form-group">                                                                       
                                                                            <input type="button" name="btn" value="Login" class="btn btn-outline-danger login_btn" id="btnlogin" />
                                                                    </div>

                                                                </div>
                                                                <div class="form-group">
                                                                    <Label ID="lblDispMessage"
                                                                               CssClass="err" style="display:none"></Label>
                                                                </div>

                                                                <div class="pageRedirect">
                                                                    <span><img src="~/Content/images/forgotPass-icon.png" /></span>
                                                                    <a href="/ForgotPassword/ForgotPassword">Forgot Password?</a>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </form>

                                        </div>

                                    </div>
                                </div>

                            </div>

                        </div>

                    </div>
                </div>
            </div>
        </form>
    </div>
</body>
</html>
