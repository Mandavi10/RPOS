            <option>Litres</option>**@

                                </select>
</div>
                        </div>


                        <div class="row pt-1">
                            <label class="col-md-4 fontBold p-0">Item Price:</label>

                            <input type="text" id="txtitemprice" maxlength="7"  class="form-control col-md-8" placeholder="Item Price" onkeyup="ItemRemoveClass();" />

                        </div>


                    </div>
                    <label id="lblitemid" style="display:none"></label>
                    <label id="lblgroupitemid" style="display:none"></label>

                </div>

            </div>
            <div class="modal-footer pr-0">
                <button type="button" class="btn btn-success btn-sm mr-2" id="btnnewitemsave" style="display:none">Save</button>
                <button type="button" class="btn btn-success btn-sm mr-2" id="btnnewitemupdate" style="display:none">Update</button>

