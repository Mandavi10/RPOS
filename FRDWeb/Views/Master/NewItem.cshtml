<div class="modal" id="newItemGroupPopup" role="dialog">
    <div class="modal-dialog modal-md">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" id="btncloseitemgroup">
                    <span class="cross">&times;</span>
                </button>
                <h4 class="modal-title" id="lblitemgroup">Create New Item Group</h4>
            </div>
            <div class="modal-body">


                <div class="row">
                    <div class="col-md-12">
                        <div class="row pt-1">
                            <label class="col-md-4 fontBold p-0">Item Group Code:</label>

                            <input type="text" id="txtgrpcode" maxlength="10" class="form-control col-md-8" placeholder="Item Group Code" onkeyup="GroupRemoveClass();" onblur="CheckGroupcode();" />

                        </div>

                        <div class="row pt-1">
                            <label class="col-md-4 fontBold p-0">Item Group Name:</label>

                            <input type="text" id="txtgrpname" maxlength="15" class="form-control col-md-8" placeholder="Item Group Name" onkeyup="GroupRemoveClass();" />

                        </div>
                        <div class="row pt-1">
                            <label class="col-md-4 fontBold p-0">Description:</label>
                            <input type="text" id="txtdescription" maxlength="35" class="form-control col-md-8" placeholder="Description" onkeyup="GroupRemoveClass();" />


                        </div>
                        <div class="row pt-1">
                            <label class="col-md-4 fontBold p-0">Main Account:</label>
                            <input type="text" id="txtmainaccount" maxlength="10" class="form-control col-md-8" placeholder="Main Account" onkeyup="GroupRemoveClass();" />

                        </div>




                    </div>

                </div>

            </div>
            <div class="modal-footer pr-0">
                <button type="button" id="btnitemgroupsave" class="btn btn-success btn-sm mr-2" data-dismiss="modal" style="display:none">Save</button>
                <button type="button" id="btnitemgroupupdate" class="btn btn-success btn-sm mr-2" data-dismiss="modal" style="display:none">Update</button>

            </div>
        </div>

    </div>


</div>
<div class="modal" id="newItemPopup" role="dialog">
    <div class="modal-dialog modal-md">

        <!-- Modal content-->
        <div class="modal-content" id="divnewitem">
            <div class="modal-header">
                <button type="button" class="close" id="btncloseitem">
                    <span class="cross">&times;</span>
                </button>
                <h4 class="modal-title" id="lblitem">Create New Item</h4>
            </div>
            <div class="modal-body">


                <div class="row">
                    <div class="col-md-12">
                        <div class="row pt-1">
                            <label class="col-md-4 fontBold p-0">Item No.:</label>

                            <input type="text" id="txtitemcode" class="form-control col-md-8" placeholder="Item No." disabled />

                        </div>

                        <div class="row pt-1">
                            <label class="col-md-4 fontBold p-0">Item Name:</label>

                            <input type="text" id="txtname" maxlength="50" class="form-control col-md-8" placeholder="Item Name" onkeyup="ItemRemoveClass();" />

                        </div>
                        <div class="row pt-1">
                            <label class="col-md-4 fontBold p-0">Item Group:</label>
                            <div class="col-md-8 dropdown p-0">
                                <select class="form-control" id="ddlitemgroup" onchange="ItemRemoveClass();" style="height: 27px; display: block;">
                                    <option value="0" selected="selected">Select</option>


                                    @*<option>Item Group 1</option>
            <option>Item Group 2</option>
            <option>Item Group 3</option>
            <option>Item Group 4</option>
            <option>Item Group 5</option>*@

                                </select>
                            </div>

                        </div>
                        <div class="row pt-1">
                            <label class="col-md-4 fontBold p-0">Unit Of Measure:</label>
                            <div class="col-md-8 dropdown p-0">
                                <select class="form-control" id="ddlUOM" onchange="ItemRemoveClass();" style="height: 27px; display: block;">
                                    <option value="0" selected="selected">Select</option>

                               

                                    @*<option>Pack</option>
